<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.astronout.zakatcalculator">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".SplashScreenActivity"
            android:theme="@style/AppThemeNoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".MainActivity"></activity>
        <activity
            android:name=".kalkulatorActivity.ZakatEmasActivity"
            android:parentActivityName=".MainActivity"/>
        <activity
            android:name=".kalkulatorActivity.ZakatFitrahActivity"
            android:parentActivityName=".MainActivity"/>
        <activity
            android:name=".kalkulatorActivity.ZakatPertanianActivity"
            android:parentActivityName=".MainActivity"/>
        <activity
            android:name=".kalkulatorActivity.ZakatPerakActivity"
            android:parentActivityName=".MainActivity"/>
        <activity
            android:name=".kalkulatorActivity.ZakatRikazActivity"
            android:parentActivityName=".MainActivity"/>
        <activity
            android:name=".kalkulatorActivity.ZakatHewanActivity"
            android:parentActivityName=".MainActivity"/>
    </application>

</manifest>